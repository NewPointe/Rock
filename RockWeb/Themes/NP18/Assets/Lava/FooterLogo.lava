<a href="{{ '~' | ResolveRockUrl }}" title="{{ 'Global' | Attribute:'OrganizationName' | Escape }}" class="footerlogo">

    {%- if CurrentPage.Layout.Site.SiteLogoBinaryFileId != null -%}
        <img src="{{ '~' | ResolveRockUrl }}GetImage.ashx?id={{ CurrentPage.Layout.Site.SiteLogoBinaryFileId }}" alt="{{ 'Global' | Attribute:'OrganizationName' | Escape }}" class="logo" />
    {%- else -%}
        {{ 'Global' | Attribute:'OrganizationName' | Escape }}
    {%- endif -%}

</a>
